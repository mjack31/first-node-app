<% include ./partials/header %>

<div class="ui raised segment text container">   
  <form class="ui form" action="/posts" method="POST">
    <div class="field">
      <label>Post title</label>
      <input type="text" name="post[title]" placeholder="Title">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="post[image]" placeholder="Image URL">
    </div>
    <div class="field">
      <label>Post body</label>
      <textarea name="post[body]"></textarea>
    </div>
    <button class="ui teal basic button" type="submit">Submit</button>
  </form>
</div>

